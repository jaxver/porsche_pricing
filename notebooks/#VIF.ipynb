#VIF

# Load the data
df = pd.read_excel("listings_gold.xlsx")

# --- Step 1: Drop one dummy per categorical group to avoid multicollinearity in heatmap ---
cols_to_exclude = []
for prefix in ["trans_", "body_", "drive_", "model_", "series_"]:
    cols_to_exclude.extend([col for col in df.columns if col.startswith(prefix)])

df_corr = df.drop(columns=cols_to_exclude, errors='ignore')

# --- Step 2: Filter only numeric columns ---
numeric_cols = df_corr.select_dtypes(include=[np.number]).columns
corr = df_corr[numeric_cols].corr()

# --- Step 3: Plot cleaner heatmap ---
mask = np.triu(np.ones_like(corr, dtype=bool))
plt.figure(figsize=(12, 10))
sns.heatmap(corr, mask=mask, cmap="coolwarm", annot=True, fmt=".2f", linewidths=0.5)
plt.title("Correlation Heatmap")
plt.tight_layout()
plt.show()

# --- Step 4: Prepare data for VIF ---
X = df.select_dtypes(include='number')
X = X.drop(columns=cols_to_exclude, errors='ignore')  # Also drop same excluded cols
X = X.drop(columns=["mileage_value", "price","Year of construction","price_in_eur","mileage_per_year"], errors='ignore')
X = X.apply(pd.to_numeric, errors='coerce')
X = X.replace([np.inf, -np.inf], np.nan).dropna()

# --- Step 5: Compute VIF ---
vif = pd.DataFrame()
vif["feature"] = X.columns
vif["VIF"] = [variance_inflation_factor(X.values, i) for i in range(X.shape[1])]

print(vif)
